{
  "name": "pokemon-evolution",
  "version": "0.0.1",
  "description": "Game based on pokemon evolution",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && nodemon server.js",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "cpx 'src/**/*' dist && cp node_modules/workbox-sw/build/workbox-sw.js dist/",
    "bootstrap": "workbox injectManifest workbox-config.js",
    "build": "npm run clean && npm run copy && npm run bootstrap"
  },
  "dependencies": {
    "express": "^4.16.1",
    "nodemon": "^1.18.3",
    "pokedex-promise-v2": "^3.1.1",
    "workbox-cli": "^3.4.1",
    "workbox-sw": "^3.4.1"
  },
  "engines": {
    "node": "8.11.3"
  },
  "repository": {
    "url": ""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "cpx": "^1.5.0"
  }
}
